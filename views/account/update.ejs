
<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<!-- Account Update Form -->
 <h2>Update Account Information</h2>
<form action="/account/update" method="post" class="account-update-form">
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" value="<%= accountData.account_firstname %>" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" value="<%= accountData.account_lastname %>" required>

    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" value="<%= accountData.account_email %>" required>

    <button type="submit">Update Account</button>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        
</form>

<!-- Change Password Form -->
<h2>Change Password</h2>

<div class="password-rules">
    Password must be at least 12 characters and contain at least 1 number,
    1 capital letter, and 1 special character.
</div>

<form action="/account/update-password" method="post" class="password-update-form">
    
    <label for="account_password">New Password:</label>
    <input type="password" id="account_password" name="account_password" required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <span id="pswdBtn" class="toggle-password">Show Password</span>

    <button type="submit">Change Password</button>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

</form>

<!-- Password Toggle Script -->
<script>
    const pswdBtn = document.getElementById("pswdBtn");
    const pswdInput = document.getElementById("account_password");

    pswdBtn.addEventListener("click", () => {
        if (pswdInput.type === "password") {
            pswdInput.type = "text";
            pswdBtn.textContent = "Hide Password";
        } else {
            pswdInput.type = "password";
            pswdBtn.textContent = "Show Password";
        }
    });
</script>