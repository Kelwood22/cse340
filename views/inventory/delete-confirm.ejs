
<h1><%= title %></h1>

<!-- Flash Messages -->
<%- messages() %>

<!-- Server-side validation errors -->
<% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error=> { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<p class="delete-warning">Are you sure you want to delete this vehicle? - The delete is permanent and cannot be undone.</p>

<!-- Add Inventory Form -->
<form action="/inv/delete" method="post" class="delete-inventory-form" id="deleteForm">
    
    <label for="inv_make">Make:</label>
    <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        required 
        value="<%= inv_make %>"
        readonly
    >

    <label for="inv_model">Model:</label>
    <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        required 
        value="<%= inv_model %>"
        readonly
    >

    <label for="inv_year">Year:</label>
    <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        required 
        min="1900"
        max="2099"
        value="<%= inv_year %>"
        readonly
    >
    
    <label for="inv_price">Price:</label>
    <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        required 
        step="0.01" 
        min="0" 
        value="<%= inv_price %>"
        readonly
    >

    <button type="submit">Delete</button>

    <input type="hidden" name="inv_id"
        value="<%= inv_id %>"
    >

</form>
